<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <h1 class=""><%= @project.title %></h1>
            <img class="card-img-top " src="<%= @project.picture %>" alt="<%= @project.title %>" style="height: 200px; object-fit: cover;">
            <p class="card-text"><%= @project.description %></p>
            <a href="<%= @project.link %>" class="btn btn-primary" target="_blank">Visit Project</a>
        </div>
    </div>
</div>

<% if current_user %>
    <%= link_to 'Delete Project', portfolio_path(@project), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
<% end %>