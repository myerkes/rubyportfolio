
<% if current_user %>
    <%= link_to 'Create New Project', new_portfolio_path %>
<% end %>

<div class="container">
    <div class="row justify-content-center">
        <% @projects.each do |project| %>
            <div class="col-md-6 col-10">
                <div class="card my-2">
                    <img class="card-img-top " src="<%= project.picture %>" alt="<%= project.title %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= project.title %></h5>
                        <p class="card-text"><%= project.description %></p>
                        <%= link_to "Learn More", portfolio_path(project), :class => "btn btn-primary", :method => "get" %>
                        <a href="<%= project.link %>" class="btn btn-primary" target="_blank">Visit Project</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
